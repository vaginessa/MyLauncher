<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Launcher">
        <!-- 格子数的X坐标 -->
        <attr name="cellX" format="integer"/>
        <!-- 格子数的Y坐标 -->
        <attr name="cellY" format="integer"/>
        <!-- 水平占了多少格子数 -->
        <attr name="cellHSpan" format="integer" />
        <!-- 垂直占了多少格子数 -->
        <attr name="cellVSpan" format="integer" />
        <!-- 水平格子间的空格 -->
        <attr name="spaceHorizentation" format="dimension"/>
        <!-- 垂直格子间的空格 -->
        <attr name="spaceVertical" format="dimension" />
        <!-- 单元格子的大小 --> 
        <attr name="cellSize" format="dimension" />
        <!-- HotSeat的高度 -->
        <attr name="w_hotseat_height" format="dimension" />
        <!-- DeleteZone的高度 -->
        <attr name="w_deletezone_height" format="dimension"  />
    </declare-styleable>
    
    <!-- 定义多屏指示的自定义属性 -->
    <declare-styleable name="SlideIndicator">
        <!-- 圆圈个数 -->
        <attr name="numbers" format="integer" />
        <!-- 圆圈的半径 -->
        <attr name="radius" format="dimension" />
        <!-- 圆圈的背景色 -->
        <attr name="background_color" format="reference|color" />
        <!-- 圆圈的前景色 -->
        <attr name="foreground_color" format="reference|color" />
        <!-- 圆圈间的间隔 -->
        <attr name="space" format="dimension" />
    </declare-styleable>
    
    <!-- 定义HotSeat的一些属性 -->
    <declare-styleable name="HotSeat">
        <!-- 控件高度的内偏移量Top -->
        <attr name="hotseat_offset_top" format="dimension" />
        <!-- 控件高度的内偏移量Bottom -->
        <attr name="hotseat_offset_bottom" format="dimension" />
        <!-- 格子间的间隔 -->
        <attr name="hotseat_space"  format="dimension" />
        <!-- HotSeat两边的间隔 -->
        <attr name="hotseat_edge_space" format="dimension" />
        <!-- HotSeat的高度 -->
        <attr name="hotseat_height" format="dimension" />
    </declare-styleable>
    
    <!-- 定义DeleteZone的一些属性 -->
    <declare-styleable name="DeleteZone">
        <!-- DeleteZone控件的高度 -->
        <attr name="deletezone_height" format="dimension" />
        <!-- 背景图片 -->
        <attr name="trashcan" format="reference" />
    </declare-styleable>
    
    
    
    
    
    
    
    
    
    
    
    
    
</resources>
